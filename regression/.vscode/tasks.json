{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "make regression",
			"type": "shell",
			"command": "make -C ${workspaceFolder}/../build/regression -j `nproc`",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/../build/regression"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make -C ${workspaceFolder}/../build/regression clean",
			"problemMatcher": [
				"$gcc"
			],
			"group": "none"
		}
	]
}
